<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">


  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Sri Deekshitha Matching and Saree Center</title>

 
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >

  
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap"
    rel="stylesheet"
  >

  <link rel="stylesheet" href="/css/style.css">
</head>

<body>

  <%- include('../partials/navbar') %>

  <!-- FLASH TOASTS -->
  <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index:1055">

    <% if (flashSuccess && flashSuccess.length) { %>
      <div class="toast text-bg-success show mb-2">
        <div class="d-flex">
          <div class="toast-body">
            <%= flashSuccess[0] %>
          </div>
          <button
            type="button"
            class="btn-close btn-close-white me-2 m-auto"
            data-bs-dismiss="toast">
          </button>
        </div>
      </div>
    <% } %>

    <% if (flashError && flashError.length) { %>
      <div class="toast text-bg-danger show">
        <div class="d-flex">
          <div class="toast-body">
            <%= flashError[0] %>
          </div>
          <button
            type="button"
            class="btn-close btn-close-white me-2 m-auto"
            data-bs-dismiss="toast">
          </button>
        </div>
      </div>
    <% } %>

  </div>

  
  <main class="container my-3 page-wrapper">
    <%- body %>
  </main>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <!-- AUTO SHOW TOAST -->
  <script>
    document.querySelectorAll('.toast').forEach(t => {
      new bootstrap.Toast(t, { delay: 3000 }).show();
    });

   
    const navbar = document.querySelector('.navbar');
    window.addEventListener('scroll', () => {
      if (window.scrollY > 10) {
        navbar.classList.add('scrolled');
      } else {
        navbar.classList.remove('scrolled');
      }
    });
  </script>

</body>
</html>
